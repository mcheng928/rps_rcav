<div class="row">
 <div class="col-md-4 col-md-offset-2 col-xs-6">
   <div class="panel panel-success">
     <div class="panel-heading">
       <h2 class="panel-title text-center">
         Paper
       </h2>
     </div>
     <div class="panel-body">
       <img class="img-responsive" src="/assets/images/paper.png">
     </div>
   </div>
 </div>

 <% moves = ["rock", "paper", "scissors"] %>
 <% computer_move = moves.sample %>

 <div class="col-md-4 col-xs-6">
   <div class="panel panel-danger">
     <div class="panel-heading">
       <h2 class="panel-title text-center">
         <%= computer_move.capitalize %>
       </h2>
     </div>
     <div class="panel-body">
         <% if computer_move == "paper" %>
         <img class ="img-responsive" src="http://localhost:3000/assets/images/paper.png">
         <% elsif computer_move == "rock" %>
         <img class ="img-responsive" src = "http://localhost:3000/assets/images/rock.png">
         <% elsif computer_move == "scissors" %>
         <img class ="img-responsive" src = "http://localhost:3000/assets/images/scissors.png" >
         <% end %>
     </div>
   </div>
 </div>
</div>

<div class="row">
 <div class="col-md-12">
   <div class="well text-center">
     <h1>

            <% if computer_move == "paper" %>
            <span class="label label-warning">
            It's a tie!
          </span>

            <% elsif computer_move == "rock" %>
            <span class="label label-success">
            You win!
</span>

            <% elsif computer_move == "scissors" %>
              <span class="label label-danger">
            You lose!
                  </span>
                  <% end %>
     </h1>
   </div>
 </div>
</div>
